{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@pirate-dice/constants": ["./libs/constants/src/index.ts"],
      "@pirate-dice/entities": ["./libs/entities/src/index.ts"],
      "@pirate-dice/types": ["./libs/types/src/index.ts"],
      "@pirate-dice/services": ["./libs/services/src/index.ts"],
      "@pirate-dice/game-engine": ["./libs/game-engine/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
