{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "../../",
    "paths": {
      "@pirate-dice/constants": ["libs/constants/src/index.ts"],
      "@pirate-dice/entities": ["libs/entities/src/index.ts"],
      "@pirate-dice/types": ["libs/types/src/index.ts"],
      "@pirate-dice/services": ["libs/services/src/index.ts"],
      "@pirate-dice/game-engine": ["libs/game-engine/src/index.ts"]
    },
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*",
    "../../libs/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
