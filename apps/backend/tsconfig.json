    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@pirate-dice/constants": ["../../libs/constants/src/index.ts"],
      "@pirate-dice/entities": ["../../libs/entities/src/index.ts"],
